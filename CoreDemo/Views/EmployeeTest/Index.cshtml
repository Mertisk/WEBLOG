@using CoreDemo.Controllers

@model List<Class1>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<h2>Employee Listesi</h2>
<br />


<table class="table table-striped">
    <tr>
        <th>
            #
        </th>
        <th>
            Adı
        </th>
        <th>
            Sil
        </th>
        <th>
            Düzenle
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.Name
            </td>
            <td>
                <a href="#" class="btn btn-info">Sil</a>
            </td>
            <td>
                <a href="/EmployeeTest/EmployeeEdit/@item.Id"class="btn btn-danger">Düzenle</a>
            </td>

        </tr>
    }
</table>
<a href="/EmployeeTest/EmployeeAdd/" class="btn btn-outline-success">Yeni Çalışan Girişi</a>
