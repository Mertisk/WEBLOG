
@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Yazarın Blogları</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Blog Başlığı</th>
        <th>Oluşturma Tarihi</th>
        <th>Kategori</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.BlogID</th>
            <td>@item.BlogTitle</td>
            <td>@item.BlogCreateDate</td>
            <td>@item.Category.CategoryName</td>
            @*<td>@item.BlogStatus</td>
            *@
            @if (item.BlogStatus) // gelen deger true ise if çalışır
            {
                <td>
                    <span class="badge badge-success">Aktif</span>
                </td>

            }
            else
            {
                <td>
                    <span class="badge badge-secondary">Pasif</span>


                </td>

            }
            <td>  <a href="/Blog/DeleteBlog/@item.BlogID" class="btn btn-danger">Sil</a> </td>
            <td>  <a href="/Blog/EditBlog/@item.BlogID" class="btn btn-warning">Güncelle</a> </td>
        </tr>
    }
</table>
<a href="/Blog/BlogAdd/" class="btn btn-info">Yeni Blog Oluştur</a>
